{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "h",
    "noEmitHelpers": true,
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "typeRoots": ["node_modules/@types", "src/typings"],
    "lib": ["es2015", "dom"],
    "paths": {
      "react": ["node_modules/@types/react"]
    }
  }
}
